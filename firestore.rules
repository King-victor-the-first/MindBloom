rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is the owner of a profile
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // userProfiles: Users can read/write their own profile.
    match /userProfiles/{userId} {
      allow read, update, delete: if isOwner(userId);
      allow create: if request.auth != null;

      // moodEntries: Only the profile owner can manage their mood entries.
      match /moodEntries/{entryId} {
        allow read, write, create, delete: if isOwner(userId);
      }

      // gratitudeJournal: Only the profile owner can manage their gratitude entries.
      match /gratitudeJournal/{journalId} {
        allow read, write, create, delete: if isOwner(userId);
      }
      
      // safetyPlan: Only the profile owner can manage their safety plan.
      match /safetyPlan/{planId} {
        allow read, write, create, delete: if isOwner(userId);
      }
    }

    // groupChatMessages: Any authenticated user can read and write messages.
    match /groupChatMessages/{messageId} {
      allow read, write: if request.auth != null;
    }
  }
}
