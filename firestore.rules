
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Grant users access to their own profile data, including all subcollections.
    match /userProfiles/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Grant users access to their own artifact data (like the safety plan).
    match /artifacts/{appId}/users/{userId}/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow any authenticated user to read and write messages in the group chat.
    match /groupChatMessages/{messageId} {
      allow read, write: if request.auth != null;
    }
  }
}
