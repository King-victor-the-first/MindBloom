
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is a moderator
    function isModerator(userId) {
      return exists(/databases/$(database)/documents/userProfiles/$(userId)) &&
             get(/databases/$(database)/documents/userProfiles/$(userId)).data.isModerator == true;
    }

    // User Profiles:
    // - Users can read and update their own profile.
    // - Moderators can read, update, and delete any user profile.
    match /userProfiles/{userId} {
      allow read, update: if request.auth.uid == userId || isModerator(request.auth.uid);
      allow create: if request.auth.uid == userId;
      allow delete: if isModerator(request.auth.uid);
    }

    // Mood Entries:
    // - Users can only perform actions on their own mood entries.
    match /userProfiles/{userId}/moodEntries/{entryId} {
      allow read, write, create, delete: if request.auth.uid == userId;
    }

    // Group Chat Messages:
    // - Any authenticated user can read the chat history.
    // - Any authenticated user can create a new message.
    // - No one can update or delete messages.
    match /groupChatMessages/{messageId} {
      allow list, get: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }
  }
}
