rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Rule for user-specific data in userProfiles
    // Allows a user to read and write only to their own profile and its subcollections.
    match /userProfiles/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rule for user-specific data in artifacts
    // Allows a user to read and write to their own data within the artifacts collection.
    match /artifacts/{appId}/users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rule for the group chat
    // Allows any authenticated user to read and write to the group chat.
    match /groupChatMessages/{messageId} {
      allow read, write: if request.auth != null;
    }
  }
}
