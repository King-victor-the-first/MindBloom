
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // User Profiles
    // - Users can create their own profile.
    // - Users can only read or update their own profile.
    match /userProfiles/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;

      // User Subcollections (Gratitude, Mood, Safety Plan)
      // - Users can read and write to any document in any subcollection under their own profile.
      match /{allSubcollections}/{docId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // Group Chat Messages
    // - Any authenticated user can read all messages.
    // - Any authenticated user can create a message.
    // - Only the original author can update their own message (for deletion).
    match /groupChatMessages/{messageId} {
      allow read, create: if request.auth.uid != null;
      allow update: if request.auth.uid == resource.data.userId;
    }
  }
}
