rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow any authenticated user to read and create messages in the group chat.
    match /groupChatMessages/{messageId} {
      allow read, create: if request.auth != null;
    }

    // Rules for user-specific data.
    match /userProfiles/{userId} {
      // The user can read and write to their own profile.
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Moderators can read and delete any user's profile.
      allow read, delete: if request.auth != null && get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.isModerator == true;
      
      // Moderators can update the isModerator flag on any user's profile.
      allow update: if request.auth != null && get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.isModerator == true && request.resource.data.keys().hasOnly(['isModerator']);
      
      // Mood entries can only be accessed by the owner of the profile.
      match /moodEntries/{entryId} {
        allow read, write, create, delete: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
