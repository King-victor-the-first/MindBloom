
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // User Profiles
    match /userProfiles/{userId} {
      // Moderators can list all users. This is required for the admin dashboard.
      allow list: if request.auth != null && get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.isModerator == true;
      
      // Any authenticated user can read or write their OWN profile.
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;

      // Any authenticated user can create their own profile.
      allow create: if request.auth != null;

      // Moderators can read, update, or delete any user's profile.
      allow read, update, delete: if request.auth != null && get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.isModerator == true;
    }

    // Mood Entries
    match /userProfiles/{userId}/moodEntries/{entryId} {
      // A user can read and write to their own mood entries subcollection.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Group Chat Messages
    match /groupChatMessages/{messageId} {
      // Any authenticated user can read and create messages in the group chat.
      // Message content is moderated by a Genkit flow before being written.
      allow read, create: if request.auth != null;
    }
  }
}
