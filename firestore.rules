
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // User Profiles: Users can manage their own profile.
    match /userProfiles/{userId} {
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
      
      // Mood Entries: Users can manage their own mood entries.
      match /moodEntries/{entryId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Gratitude Journal: Users can manage their own gratitude entries.
      match /gratitudeJournal/{journalId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Safety Plan: Users can manage their own safety plan.
      match /safetyPlan/{planId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Group Chat: Any authenticated user can read. Users can only create/update their own messages.
    // Deletion is a "soft delete" via an update.
    match /groupChatMessages/{messageId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
