rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to read and write ONLY their own profile data and subcollections.
    // This is the key rule that fixes the permission error for mood, gratitude, etc.
    match /userProfiles/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow any authenticated user to read and write to the group chat.
    // Moderation is handled by the application logic and an AI flow.
    match /groupChatMessages/{messageId} {
      allow read, write: if request.auth != null;
    }
  }
}
