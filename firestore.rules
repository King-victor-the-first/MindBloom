rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read/update their own profile, and create it.
    match /userProfiles/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth != null;

      // Users can read and write to their own mood, gratitude, and safety plan subcollections.
      match /moodEntries/{entryId} {
        allow read, write: if request.auth.uid == userId;
      }
      match /gratitudeJournal/{journalId} {
        allow read, write: if request.auth.uid == userId;
      }
      match /safetyPlan/{planId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // Any authenticated user can read and create chat messages.
    // Users can only update/delete their own messages.
    match /groupChatMessages/{messageId} {
      allow read, create: if request.auth != null;
      allow update, delete: if request.auth.uid == resource.data.userId;
    }
  }
}
