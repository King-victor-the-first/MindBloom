rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Moderators can read and write any user profile.
    // Users can only read and write their own profile.
    match /userProfiles/{userId} {
      allow read, update, delete: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.isModerator == true);
      allow create: if request.auth != null;
      allow list: if request.auth != null && get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.isModerator == true;
    }

    // Users can only manage their own mood entries.
    match /userProfiles/{userId}/moodEntries/{entryId} {
      allow read, write, create, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Any authenticated user can read and create messages in the group chat.
    match /groupChatMessages/{messageId} {
      allow read, create: if request.auth != null;
    }
  }
}
