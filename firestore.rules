rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Moderators can read/delete any user profile.
    // Regular users can only read and write their own.
    match /userProfiles/{userId} {
      allow get, list, delete: if get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.isModerator == true;
      allow read, write: if request.auth.uid == userId;
    }

    // Users can read and write their own mood entries.
    // The 'list' permission is crucial for querying the collection for the chart.
    match /userProfiles/{userId}/moodEntries/{entryId} {
      allow list, create: if request.auth.uid == userId;
      allow get, update, delete: if request.auth.uid == userId && exists(/databases/$(database)/documents/userProfiles/$(userId));
    }

    // Public chat messages can be read and created by any authenticated user.
    match /groupChatMessages/{messageId} {
      allow read, create: if request.auth != null;
    }
  }
}
