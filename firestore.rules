rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // This rule allows a user to read/write ONLY to their own profile and its subcollections.
    // The {document=**} is a recursive wildcard that matches all documents and subcollections.
    match /userProfiles/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // This rule allows a user to read/write ONLY to their own artifacts and subcollections.
    match /artifacts/{appId}/users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // This rule allows any authenticated user to read and write to the group chat.
    match /groupChatMessages/{messageId} {
      allow read, write: if request.auth != null;
    }
  }
}
