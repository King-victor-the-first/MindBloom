rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to read and write their own profile data, including all subcollections.
    match /userProfiles/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow any authenticated user to read and write to the group chat.
    // Moderation is handled by a cloud function, not just security rules.
    match /groupChatMessages/{messageId} {
      allow read, write: if request.auth != null;
    }
  }
}
