
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // User Profiles
    // - Allow users to create their own profile.
    // - Allow authenticated users to read and update their own profile.
    match /userProfiles/{userId} {
      allow create: if request.auth.uid == userId;
      allow read, update: if isOwner(userId);
    }

    // Mood Entries
    // - Allow users to create, read, and update their own mood entries.
    match /userProfiles/{userId}/moodEntries/{entryId} {
      allow read, write: if isOwner(userId);
    }
    
    // Gratitude Journal
    // - Allow users to create, read, and update their own journal entries.
    match /userProfiles/{userId}/gratitudeJournal/{journalId} {
        allow read, write: if isOwner(userId);
    }

    // Safety Plan
    // - Allow users to create, read, and update their own safety plan.
    match /userProfiles/{userId}/safetyPlan/{planId} {
        allow read, write: if isOwner(userId);
    }

    // Group Chat Messages
    // - Allow any authenticated user to read all messages.
    // - Allow authenticated users to create messages.
    // - Allow users to update (soft-delete) only their own messages.
    match /groupChatMessages/{messageId} {
      allow read, create: if request.auth != null;
      allow update: if isOwner(resource.data.userId);
      // Disallow direct deletion for all users.
      allow delete: if false;
    }
  }
}
