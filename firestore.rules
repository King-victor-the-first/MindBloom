
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the requesting user is a moderator.
    function isModerator() {
      return get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.isModerator == true;
    }

    // User Profiles:
    // - Users can read their own profile.
    // - Moderators can read any profile.
    // - Users can create/update their own profile.
    // - Moderators can delete any profile.
    match /userProfiles/{userId} {
      allow read: if request.auth.uid == userId || isModerator();
      allow write: if request.auth.uid == userId;
      allow delete: if isModerator();
    }

    // Mood Entries:
    // - Users can only read and write their own mood entries.
    match /userProfiles/{userId}/moodEntries/{entryId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Group Chat Messages:
    // - Any authenticated user can read the entire chat collection.
    // - Any authenticated user can create new messages.
    match /groupChatMessages/{messageId} {
      allow list, get: if request.auth != null;
      allow create: if request.auth != null;
    }
  }
}
