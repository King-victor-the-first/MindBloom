rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow moderators to list all user profiles for the admin dashboard
    match /userProfiles/{document=**} {
      allow list: if get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.isModerator == true;
    }

    // Rules for a single user's profile
    match /userProfiles/{userId} {
      // A user can get and update their own profile
      allow get, update: if request.auth.uid == userId;

      // Moderators can get and update any user's profile
      allow get, update: if get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.isModerator == true;
      
      // A user can create their own profile. A moderator can also create profiles.
      allow create: if request.auth.uid == userId || get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.isModerator == true;

      // Moderators can delete users.
      allow delete: if get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.isModerator == true;

      // Rules for the moodEntries subcollection
      match /moodEntries/{entryId} {
        // A user can read and write their own mood entries.
        allow read, write: if request.auth.uid == userId;
      }
    }

    // Rules for the groupChatMessages collection
    match /groupChatMessages/{messageId} {
      // Any authenticated user can read (get, list) and create messages.
      allow read, create: if request.auth != null;
    }
  }
}
