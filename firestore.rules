rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // This is the rule you need.
    // It matches ALL documents and sub-collections inside a user's folder.
    match /artifacts/{appId}/users/{userId}/{document=**} {
      // Allow read/write ONLY if the user is logged in
      // AND their ID matches the folder ID.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // This rule is for your public community chat
    match /artifacts/{appId}/public/data/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}