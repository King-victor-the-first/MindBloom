
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isSuperAdmin() {
      return request.auth.uid == 'BzsBHchaPEYuHwuhqlMiwRaMbBJ2';
    }

    match /userProfiles/{userId} {
      allow read: if request.auth != null;
      allow write: if isOwner(userId) || isSuperAdmin();
    }

    match /userProfiles/{userId}/moodEntries/{entryId} {
      allow read, write: if isOwner(userId);
    }
    
    match /groupChatMessages/{messageId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null && (isOwner(resource.data.userId) || isSuperAdmin());
      allow delete: if request.auth != null && (isOwner(resource.data.userId) || isSuperAdmin());
    }
  }
}
