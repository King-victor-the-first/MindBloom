rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read and write to their own profile and subcollections.
    // This is the primary rule to fix the permission errors.
    match /userProfiles/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // The group chat is readable by any authenticated user, but only writable
    // by them for their own messages. Deletes are not allowed.
    match /groupChatMessages/{messageId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
