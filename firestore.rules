rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read and write to their own profile document.
    // Moderators can read any user profile.
    match /userProfiles/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.isModerator == true);
      allow write: if request.auth != null && request.auth.uid == userId;

      // Users can read and write to their own subcollections.
      // Moderators can read from any user's subcollections.
      match /{subcollection}/{docId} {
        allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.isModerator == true);
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Chat messages can be read by any authenticated user.
    // Users can only create messages for themselves.
    // Users can only update/delete their own messages (soft delete).
    // Moderators can "delete" (soft delete) any message.
    match /groupChatMessages/{messageId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update: if request.auth != null && (
        (resource.data.userId == request.auth.uid && request.resource.data.isDeleted == true) ||
        get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.isModerator == true
      );
      // Disallow hard deletes for safety, only soft deletes via update.
      allow delete: if false;
    }
  }
}
