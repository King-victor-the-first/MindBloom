rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // User Profiles
    // - Users can create their own profile.
    // - Users can read their own profile.
    // - Authenticated users can read other profiles (for features like chat display names).
    // - Users can update their own profile.
    // - Users can delete their own profile.
    match /userProfiles/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow get: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == userId;

      // Mood Entries Subcollection
      // - Users can create, read, update, and delete their own mood entries.
      match /moodEntries/{entryId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Gratitude Journal Subcollection
      // - Users can create, read, update, and delete their own gratitude entries.
      match /gratitudeJournal/{journalId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Safety Plan Subcollection
      // - Users can create, read, and update their own safety plan.
      match /safetyPlan/{planId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Group Chat Messages
    // - Any authenticated user can read all messages.
    // - Any authenticated user can create a message.
    // - Users can only update/delete their own messages.
    match /groupChatMessages/{messageId} {
      allow read, create: if request.auth != null;
      allow update, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
