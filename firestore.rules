rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read and write their own profile data.
    // This also covers all subcollections like moodEntries, gratitudeJournal, and safetyPlan.
    match /userProfiles/{userId}/{documents=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Any authenticated user can read and create messages in the group chat.
    // Users can only update or delete their own messages.
    match /groupChatMessages/{messageId} {
      allow read, create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
