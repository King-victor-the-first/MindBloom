
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // User Profile: Users can create their own profile, and can only read/update their own.
    match /userProfiles/{userId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth.uid == userId;

      // Mood Entries: Users can read/write their own mood entries.
      match /moodEntries/{entryId} {
        allow read, write: if request.auth.uid == userId;
      }
      
      // Gratitude Journal: Users can read/write their own journal entries.
      match /gratitudeJournal/{journalId} {
        allow read, write: if request.auth.uid == userId;
      }
      
      // Safety Plan: Users can read/write their own safety plan.
      match /safetyPlan/{planId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // Group Chat: Any authenticated user can read and write to the chat.
    // Writes are further checked by a Genkit flow for moderation.
    match /groupChatMessages/{messageId} {
      allow read, write: if request.auth != null;
    }
  }
}
