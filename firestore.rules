rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is a moderator by reading their profile.
    function isModerator(userId) {
      return get(/databases/$(database)/documents/userProfiles/$(userId)).data.isModerator == true;
    }

    // userProfiles:
    // - Any authenticated user can read/write their own profile.
    // - Moderators can read, write, delete, and LIST all profiles.
    match /userProfiles/{userId} {
      allow read, write: if request.auth.uid == userId;
      allow list, get, update, delete: if request.auth != null && isModerator(request.auth.uid);
    }

    // moodEntries: Users can list and manage their own mood entries.
    match /userProfiles/{userId}/moodEntries/{entryId} {
      allow list, read, write: if request.auth.uid == userId;
    }

    // groupChatMessages: Any authenticated user can read the list of messages and create new ones.
    match /groupChatMessages/{messageId} {
      allow list, get, create: if request.auth != null;
    }
  }
}
