
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // User Profiles: Users can only read and write to their own profile.
    match /userProfiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Mood Entries: Users can only manage their own mood entries.
      match /moodEntries/{entryId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Group Chat: Any authenticated user can read and create messages.
    // They cannot update or delete messages.
    match /groupChatMessages/{messageId} {
      allow read, create: if request.auth != null;
    }
  }
}
