rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User can only read/write their own profile.
    // Moderators can read/write any profile.
    match /userProfiles/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.isModerator == true);
      
      // Moderators can list all users.
      allow list: if request.auth != null && get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.isModerator == true;
    }

    // User can only read/write their own mood entries.
    match /userProfiles/{userId}/moodEntries/{entryId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Any authenticated user can list (read all) and create chat messages.
    match /groupChatMessages/{messageId} {
      allow list, create: if request.auth != null;
      // Individual messages can be read by any authenticated user.
      allow get: if request.auth != null;
    }
  }
}
