rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only read and write their own profile data.
    match /userProfiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Users can read and write to all subcollections within their own profile.
      // This covers moodEntries, gratitudeJournal, and safetyPlan.
      match /{allDocuments=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Any authenticated user can read and write to the group chat.
    // Writes are further checked by an AI moderation flow in the application code.
    match /groupChatMessages/{messageId} {
      allow read, write: if request.auth != null;
    }
  }
}