
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User profile data is readable by anyone, but only the user can write to their own profile.
    match /userProfiles/{userId} {
      allow read;
      allow write: if request.auth.uid == userId;

      // Users can only read and write to their own mood, gratitude, and safety plan subcollections.
      match /moodEntries/{entryId} {
        allow read, write: if request.auth.uid == userId;
      }

      match /gratitudeJournal/{entryDate} {
        allow read, write: if request.auth.uid == userId;
      }

      match /safetyPlan/userPlan {
         allow read, write: if request.auth.uid == userId;
      }
    }

    // Chat messages can be read by any authenticated user, but only created by them.
    // Users can only update their own messages (for deletion).
    match /groupChatMessages/{messageId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
      allow delete: if false; // Disallow hard deletes
    }
  }
}
