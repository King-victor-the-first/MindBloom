rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files for any user
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to a user-specific folder in 'chat/'
    match /chat/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
